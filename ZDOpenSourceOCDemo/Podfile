# Uncomment the next line to define a global platform for your project
platform :ios, '8.0'
inhibit_all_warnings!

def pods_oc
  # sync
  pod 'ReactiveObjC'
  pod 'PromiseKit'
  # layout
  pod 'IGListKit'
  pod 'Texture'
  pod 'YogaKit'
  pod 'Masonry'
  # router
  pod 'JLRoutes'
  # network
  pod 'YTKNetwork'
  pod 'YYModel'
  # animation
  pod 'lottie-ios'
  # tabbarController
  pod 'RDVTabBarController'
  pod 'RTRootNavigationController'
  # extension
  pod 'ObjectiveSugar', :inhibit_warnings => true
  # tools
  pod 'GDPerformanceView'
  # playground
  pod 'KZPlayground', :inhibit_warnings => true
end

target 'ZDOpenSourceOCDemo' do
  # Uncomment the next line if you're using Swift or would like to use dynamic frameworks
  use_frameworks!

  # Pods for ZDOpenSourceOCDemo
  pods_oc

  target 'ZDOpenSourceOCDemoTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'ZDOpenSourceOCDemoUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
